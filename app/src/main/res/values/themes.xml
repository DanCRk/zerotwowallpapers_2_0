<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZerotwoWallpapers20" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/principal</item>
        <item name="colorPrimaryVariant">@color/principal_dark</item>
        <item name="colorOnPrimary">@color/principal_claro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundario</item>
        <item name="colorSecondaryVariant">@color/secundario_dark</item>
        <item name="colorOnSecondary">@color/secundario_claro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/fuente_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZerotwoWallpapers20.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WallsNakano.Transparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="Theme.WallsNakano.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.WallsNakano.Fullscreen" parent="Theme.ZerotwoWallpapers20">
        <item name="android:actionBarStyle">@style/Widget.Theme.WallsNakano.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.WallsNakano.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>